@model Announcement

<h1 style="margin: auto; background-color: #ffbb00; text-align:center;">Edit announcement</h1>

<form action="/EditAnnouncement/Index/@Model.id" style="display: flex; flex-direction: column; margin: auto; background-color: #EEEEEE; width: 30rem; height: 20rem; margin-top: 1rem;">
    

    <div class="addOption">
        <label style="width: 10rem; font-size: 1.5rem; margin-left: 1rem;">Title</label>
        <input name="title" class="titleInput" type="text" value="@Model.title"/>
    </div>

    <div class="addOption">
        <label style="width: 10rem; font-size: 1.5rem;">Description</label>
        <textarea name="description" class="descriptionInput" type="text">@Model.description</textarea>
    </div>

    <div>
        <button name="isEdited" value="true" class="btnEdit" style="margin-bottom: 1rem;"><h2>Edit</h2></button>
    </div>
</form>


<div style="background-color: #EEEEEE; width: 30rem; margin: auto;">
    <form action="/SelectedAnnouncement/index/@Model.id" style="width: 5rem; margin-left: 11.5rem;"><button class="btnCancel" style="margin-bottom: 1rem;"><h2>Cancel</h2></button></form>
</div>